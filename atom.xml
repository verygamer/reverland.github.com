---
layout: nil
canonical: http://reverland.github.com
---
<?xml version="1.0" encoding="utf-8"?>
<feed xmlns="http://www.w3.org/2005/Atom">
    <title>Think and Action</title>
    <link href="{{ page.canonical }}/atom.xml" rel="self" />
    <link href="{{ page.canonical }}" />
    <updated>{{ site.time | date_to_xmlschema }}</updated>
    <id>{{ page.canonical }}/</id>
    <author>
        <name>Reverland</name>
        <email>lhtlyy@gmail.com</email>
    </author>
    {% for post in site.posts %}
    <entry>
        <title>{{ post.title }}</title>
        <link href="{{ page.canonical }}{{ post.url }}" />
        <updated>{{ post.date | date_to_xmlschema }}</updated>
        <id>{{ page.canonical }}{{ post.id }}</id>
        <content type="html">{{ post.content | xml_escape }}</content>
    </entry>
    {% endfor %}
</feed>
